{
  "types": [
      "node"
  ],
  "compilerOptions": {
      "allowJs": false,
      "target": "ES2017",
      "removeComments": false,
      "noEmitOnError": true,
      "inlineSources": true,
      "inlineSourceMap": true,
      "moduleResolution": "node",
      "alwaysStrict": true,
      "outDir": "build",
      "experimentalDecorators": true,
      "module": "commonjs"
  },
  "include": [
      "**/*.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}